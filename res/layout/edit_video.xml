    <EditText
        android:id="@+id/evideoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <EditText
        android:id="@+id/evideoDes"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_border_des"
        android:ems="10"
        android:hint="Description"
        android:padding="16dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evideoName" />

    <EditText
        android:id="@+id/evideoLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="Link"
        android:inputType="text"
        android:maxLines="1"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evideoDes" />

    <EditText
        android:id="@+id/evideoDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="Due Date"
        android:inputType="date"
        android:padding="16dp"
        android:focusableInTouchMode="false"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evideoLink"
        tools:ignore="HardcodedText,MissingConstraints" />


    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/etime"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/evideoDate" >
        <EditText
            android:id="@+id/estartTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_border"
            android:ems="10"
            android:layout_weight="1"
            android:focusableInTouchMode="false"
            android:hint="Start Time"
            android:layout_marginRight="5dp"
            android:inputType="time"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/eendTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_border"
            android:ems="10"
            android:layout_marginLeft="5dp"
            android:focusableInTouchMode="false"
            android:hint="End Time"
            android:layout_weight="1"
            android:inputType="time"
            android:padding="16dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@+id/etime">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="Cancel"
                android:textAllCaps="false"
                app:backgroundTint="#0099FF"
                android:background="@drawable/round_bg"/>

            <Button
                android:id="@+id/editHwButton"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Edit"
                android:textAllCaps="false"
                app:backgroundTint="#0099FF"
                android:background="@drawable/round_bg" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>